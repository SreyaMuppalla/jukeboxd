{
  "rules": {
    "users": {
      "$userId": {
        ".read": "auth !== null",
        ".write": "auth !== null && auth.uid === $userId",
        ".validate": "auth !== null"
      }
    },
    "reviews": {
      ".read": "true",
      "$reviewId": {
        ".read": "true",
        ".write": "auth !== null && (data.child('user_id').val() === auth.uid || newData.exists())",
        ".validate": "auth !== null"
      }
    },
    "songs": {
      ".read": "true",
      "$songId": {
        ".write": "auth !== null"
      }
    },
    "albums": {
      ".read": "true",
      "$albumId": {
        ".write": "auth !== null"
      }
    },
    "comments": {
      ".read": "true",
      "$commentId": {
        ".write": "auth !== null && (data.child('user_id').val() === auth.uid || newData.exists())"
      }
    },
    "$other": {
      ".read": "false",
      ".write": "false"
    }
  }
}