{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"./\" run build"
      ]
    }
  ],
  "hosting": {
    "public": ".next", 
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ], 
    "cleanUrls": true,
    "trailingSlash": true,
    "appAssociation": "AUTO",
    "rewrites": [
      {
        "destination": "/profile-page/[id]/index.html",
        "regex": "^/profile-page/([^/]+?)(?:/)?$"
      }, 
      {
        "destination": "/song-page/[id]/index.html",
        "regex": "^/song-page/([^/]+?)(?:/)?$"
      }, 
      {
        "destination": "/artist-page/[id]/index.html",
        "regex": "^/artist-page/([^/]+?)(?:/)?$"
      }, 
      {
        "destination": "/album-page/[id]/index.html",
        "regex": "^/album-page/([^/]+?)(?:/)?$"
      }, 
      {
        "source": "/profile-page/{id}",
        "function": "nextServer"
      },
      {
        "source": "/_next/{*rest}",
        "function": "nextServer"
      }, 
      {
        "source": "/song-page/{id}",
        "function": "nextServer"
      },
      {
        "source": "/artist-page/{id}",
        "function": "nextServer"
      },
      {
        "source": "/album-page/{id}",
        "function": "nextServer"
      }
    ]
  }
}
